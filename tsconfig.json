{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "noImplicitAny": false,
    "lib": ["es2017", "DOM"],
    "allowJs": true,
    "jsx": "react-native",
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "typeRoots": ["node_modules/@types", "./src/**"],
    "paths": {
      "@src": ["./src/*"],
      "@assets": ["./src/assets/"],
      "@common": ["src/common"],
      "@enums": ["./src/enums/"],
      "@contexts": ["./src/contexts/"],
      "@database": ["src/DatabaseServices"],
      "@utils": ["src/utils"],
      "@hooks": ["./src/hooks/"],
      "@hocs": ["./src/hocs/"],
      "@styles": ["./src/styles/"],
      "@navigation": ["./src/navigation/"],
      "@types": ["./src/types/"],
      "@constant": ["./src/constant/"],
      "@modules": ["./src/modules"]
    },
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["./**/*", "*.tsx", "*.json", "*.tff", "typings/**/*.d.ts"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "dist"
  ]
}
