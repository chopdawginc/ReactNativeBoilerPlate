{
  "extends": "@react-native/typescript-config",
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["**/node_modules", "**/Pods"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-native",
    "noEmit": true,
    "isolatedModules": true,
    "customConditions": ["react-native"],

    // Strictness
    "strict": true,
    // Consider keeping this true; it’s enabled by `strict`, but you explicitly disabled it before.
    // "noImplicitAny": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,

    // RN doesn’t have the DOM; avoid pulling in DOM types.
    "lib": ["ES2017"],

    // Interop
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "baseUrl": ".",
    // `typeRoots` should be directories, not globs; usually you don’t need to set this at all.
    // If you have custom d.ts files, put them in `src/types` and uncomment the next line.
    // "typeRoots": ["./src/types", "./node_modules/@types"],

    // Helpful for RN projects
    "skipLibCheck": true,
    "paths": {
      "@src": ["./src/*"],
      "@assets": ["./src/assets/"],
      "@contexts": ["src/contexts/"],
      "@services": ["src/services/"],
      "@styles/*": ["./src/styles/*"],
      "@navigation": ["src/navigation/"],
      "@types": ["src/types/"],
      "@constant": ["src/constant/"],
      "@features": ["src/features/"],
      "@shared/*": ["src/shared/*"],
      "@languages": ["src/languages/"]
    }
  }
}
